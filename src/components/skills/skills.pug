-
  var skills = [
    ["Frontend", ["HTML", "CSS", "Javascript", "Vue"]],
    ["Workflow", ["GIT", "Terminal", "Gulp", "Webpack"]],
  ]

ul.skills
  each category in skills
    li.skills__item
      .skill-row
        .skill-row__title #{category[0]}
        ul.skill-row__list
          each skill in category[1]
            li.skill-row__item 
              .skill 
                svg(viewBox="0 0 100 100").skill__circle
                  circle(cx="50" cy="50" r="40").skill__circle--under
                  circle(cx="50" cy="50" r="40" stroke="url(#gradient)" transform="rotate(180 50 50)").skill__circle--above
                  linearGradient(id="gradient" x1="0%" y1="0%" x2="100%" y2="0")
                    stop(offset="0%" stop-color="#5500f2")
                    stop(offset="100%" stop-color="#8f00ef")
                .skill__name #{skill}