.review-slider {

  background: url(../images/content/budda.png) no-repeat top right 100% / cover;
  padding: 200px 0;

  &__header {
    display: flex;
  }

  h2 {
    font-size: 36px;
    font-weight: 700;
    padding-bottom: 78px;
    margin-right: 118px;

    @include phones {
      margin-right: 30px;
    }
  }

  &__items {
    width: 80%;
  }

  &__controls {

    @include phones {
      display: flex;
    }
  }
}